<UserControl x:Class="Tkmm.Views.Pages.NetworkSettingsPageView"
             xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:pages="clr-namespace:Tkmm.ViewModels.Pages"
             xmlns:converters="clr-namespace:Tkmm.Converters"
             mc:Ignorable="d"
             x:DataType="pages:NetworkSettingsPageViewModel">

    <UserControl.Resources>
        <converters:NullToBoolConverter x:Key="NullToBoolConverter"/>
    </UserControl.Resources>

    <StackPanel Margin="15" Spacing="10">
        <TextBlock Text="Available Networks" FontSize="16" FontWeight="Bold"/>
        <ListBox ItemsSource="{Binding AvailableNetworks}" SelectedItem="{Binding SelectedNetwork}" DisplayMemberPath="Ssid"/>
        
        <TextBox Text="{Binding NetworkPassword, Mode=TwoWay}" Watermark="Enter Password"
                 IsVisible="{Binding SelectedNetwork, Converter={StaticResource NullToBoolConverter}}"/>
        
        <Button Content="Connect" Command="{Binding ConnectToNetworkCommand}" IsEnabled="{Binding SelectedNetwork}"/>
        <Button Content="Scan for Networks" Command="{Binding ScanForNetworksCommand}"/>
    </StackPanel>
</UserControl>