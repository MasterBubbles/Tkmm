<UserControl x:Class="Tkmm.Views.Pages.NetworkSettingsPageView"
             xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:pages="clr-namespace:Tkmm.ViewModels.Pages"
             xmlns:converters="clr-namespace:Tkmm.Converters"
             x:DataType="pages:NetworkSettingsPageViewModel">

    <UserControl.Resources>
        <converters:NullToBoolConverter x:Key="NullToBoolConverter"/>
        <converters:NullableConnectedToBoolConverter x:Key="NullableConnectedToBoolConverter"/>
        <converters:SavedPasswordToBoolConverter x:Key="SavedPasswordToBoolConverter"/>
        <converters:NoSavedPasswordToBoolConverter x:Key="NoSavedPasswordToBoolConverter"/>
    </UserControl.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <StackPanel Grid.Column="0" Margin="15" Spacing="10">
            <TextBlock Text="WiFi Networks" FontWeight="Bold" FontSize="16" Margin="0,0,0,10"/>
            <Button Content="Refresh Network List" Command="{Binding ScanForNetworksCommand}" IsEnabled="{Binding IsWifiEnabled}"/>
            <ListBox ItemsSource="{Binding AvailableNetworks}" SelectedItem="{Binding SelectedNetwork}">
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <StackPanel Orientation="Horizontal" Spacing="10">
                            <TextBlock Text="{Binding Ssid}"/>
                            <TextBlock Text="Connected" Foreground="Green" Margin="5,0,0,0"
                                       IsVisible="{Binding Connected}"/>
                        </StackPanel>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>
            
            <TextBox Text="{Binding NetworkPassword, Mode=TwoWay}" Watermark="Enter Password" PasswordChar="*"
                     IsVisible="{Binding SelectedNetwork, Converter={StaticResource NoSavedPasswordToBoolConverter}}"/>
            
            <StackPanel Orientation="Horizontal" Spacing="10">
                <Button Content="Connect" Command="{Binding ConnectToNetworkCommand}" IsEnabled="{Binding SelectedNetwork, Converter={StaticResource NullToBoolConverter}}"/>
                <Button Content="Disconnect" Command="{Binding DisconnectSsidCommand}" IsEnabled="{Binding SelectedNetwork, Converter={StaticResource NullableConnectedToBoolConverter}}" />
                <Button Content="Forget SSID" Command="{Binding ForgetSsidCommand}" IsEnabled="{Binding SelectedNetwork, Converter={StaticResource SavedPasswordToBoolConverter}}"/>
            </StackPanel>
        </StackPanel>

        <StackPanel Grid.Column="1" Margin="15" VerticalAlignment="Center" HorizontalAlignment="Center" Spacing="20">
            <TextBlock Text="Network Services" FontWeight="Bold" FontSize="16" Margin="0,0,0,10" TextAlignment="Center"/>
            
            <StackPanel Orientation="Horizontal" Spacing="10" HorizontalAlignment="Center">
                <ToggleSwitch IsChecked="{Binding IsWifiEnabled, Mode=TwoWay}" 
                              OffContent="WiFi Service" OnContent="WiFi Service" />
            </StackPanel>
            
            <StackPanel Orientation="Horizontal" Spacing="10" HorizontalAlignment="Center">
                <ToggleSwitch IsChecked="{Binding IsSshEnabled, Mode=TwoWay}" 
                              OffContent="SSH Service" OnContent="SSH Service" />
            </StackPanel>
            
            <StackPanel Orientation="Horizontal" Spacing="10" HorizontalAlignment="Center">
                <ToggleSwitch IsChecked="{Binding IsSmbEnabled, Mode=TwoWay}" 
                              OffContent="SMB Service" OnContent="SMB Service" />
            </StackPanel>

            <TextBlock Text="Network Information" FontWeight="Bold" FontSize="16" Margin="0,10,0,10" TextAlignment="Center"/>
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <Border Grid.Row="0" Grid.Column="0" BorderBrush="{DynamicResource SystemAccentColor}" BorderThickness="1">
                    <TextBlock Text="IP Address:" Margin="15,5,15,5"/>
                </Border>
                <Border Grid.Row="0" Grid.Column="1" BorderBrush="{DynamicResource SystemAccentColor}" BorderThickness="1">
                    <TextBlock Text="{Binding IpAddress}" Margin="15,5,15,5"/>
                </Border>

                <Border Grid.Row="1" Grid.Column="0" BorderBrush="{DynamicResource SystemAccentColor}" BorderThickness="1">
                    <TextBlock Text="Subnet Mask:" Margin="15,5,15,5"/>
                </Border>
                <Border Grid.Row="1" Grid.Column="1" BorderBrush="{DynamicResource SystemAccentColor}" BorderThickness="1">
                    <TextBlock Text="{Binding Netmask}" Margin="15,5,15,5"/>
                </Border>

                <Border Grid.Row="2" Grid.Column="0" BorderBrush="{DynamicResource SystemAccentColor}" BorderThickness="1">
                    <TextBlock Text="Gateway:" Margin="15,5,15,5"/>
                </Border>
                <Border Grid.Row="2" Grid.Column="1" BorderBrush="{DynamicResource SystemAccentColor}" BorderThickness="1">
                    <TextBlock Text="{Binding Gateway}" Margin="15,5,15,5"/>
                </Border>

                <Border Grid.Row="3" Grid.Column="0" BorderBrush="{DynamicResource SystemAccentColor}" BorderThickness="1">
                    <TextBlock Text="MAC Address:" Margin="15,5,15,5"/>
                </Border>
                <Border Grid.Row="3" Grid.Column="1" BorderBrush="{DynamicResource SystemAccentColor}" BorderThickness="1">
                    <TextBlock Text="{Binding MacAddress}" Margin="15,5,15,5"/>
                </Border>
            </Grid>
        </StackPanel>
    </Grid>
</UserControl>